{
  "name": "the-big-o",
  "description": "An overlay library powered by web components and browser specs like <dialog> and [popup].",
  "license": "MIT",
  "author": "Westbrook Johnson",
  "version": "0.0.0",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./click.js": {
      "development": "./dist/src/components/click/click-o.js",
      "default": "./dist/src/components/click/click-o.js"
    },
    "./hover.js": {
      "development": "./dist/src/components/hover/hover-o.js",
      "default": "./dist/src/components/hover/hover-o.js"
    },
    "./manual.js": {
      "development": "./dist/src/components/manual/manual-o.js",
      "default": "./dist/src/components/manual/manual-o.js"
    },
    "./modal.js": {
      "development": "./dist/src/components/modal/modal-o.js",
      "default": "./dist/src/components/modal/modal-o.js"
    }
  },
  "scripts": {
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc",
    "prepublish": "tsc",
    "prepare": "husky install",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && build-storybook"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.0.0",
    "lit": "2.2.8"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing": "^3.1.6",
    "@spectrum-web-components/menu": "0.14.4",
    "@spectrum-web-components/popover": "0.11.16",
    "@spectrum-web-components/theme": "0.12.0",
    "@spectrum-web-components/tooltip": "0.10.16",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "@web/dev-server": "^0.1.32",
    "@web/dev-server-storybook": "^0.5.1",
    "@web/test-runner": "^0.13.31",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-lit-a11y": "^2.2.1",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
